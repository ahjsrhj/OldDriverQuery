<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="75dp"
    android:background="#ffffff"
    app:cardCornerRadius="2dp"
    app:elevation="1dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_card_view_detail_info_champion_icon"
        android:src="@drawable/akali"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitCenter"
        app:riv_corner_radius="90dp"
        app:riv_border_width="3dp"
        app:riv_border_color="@color/colorTextIcon"
        />

    <TextView
        android:id="@+id/tv_card_view_detail_info_title"
        android:text="虚空之眼 7次"
        android:textColor="@color/colorSecondText"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>