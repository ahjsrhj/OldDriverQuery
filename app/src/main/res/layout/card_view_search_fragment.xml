<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="75dp"
    android:background="#ffffff"
    app:cardCornerRadius="2dp"
    app:elevation="1dp">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_se_avatar"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profileicon4"
            android:scaleType="fitCenter"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:riv_corner_radius="30dp"
            app:riv_border_width="2dp"
            app:riv_border_color="@color/colorTextIcon"
            />

        <TextView
            android:id="@+id/tv_se_name_level"
            android:text="你不认识我 - Lv30"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_se_avatar"
            android:layout_toEndOf="@+id/iv_se_avatar"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_se_area"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tv_se_name_level"
            android:layout_toRightOf="@+id/iv_se_avatar"
            android:layout_toEndOf="@+id/iv_se_avatar"
            android:text="电信九 - 巨神峰"
            android:textSize="16sp"
            android:textColor="@color/colorSecondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_se_tier"
            android:text="青铜五"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </RelativeLayout>




</android.support.v7.widget.CardView>